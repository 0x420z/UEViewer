# perl highlighting

R   = .
PRJ = umodel
!include common.project

sources(MAIN) = {
	Main.cpp
	Exporters/*.cpp
	Unreal/*.cpp
	Viewers/*.cpp
	MeshInstance/*.cpp
	Core/*.cpp
